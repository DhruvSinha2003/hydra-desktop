{
  "name": "hydra-desktop",
  "version": "1.0.0",
  "description": "Local instance of Hydra as a Windows application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "jest"
  },
  "build": {
    "appId": "com.hydra.desktop",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "hydra-synth": "^1.3.29",
    "monaco-editor": "^0.45.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  }
}